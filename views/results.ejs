<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="IE=edge" http-equiv="X-UA-Compatible" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <title>Resultados de la Búsqueda</title>
  </head>
  <body>
    <div>
      <nav class="navbar bg-dark border-bottom border-body" data-bs-theme="dark" id="nav">
          <div class="container-fluid">
            <a class="navbar-brand" href="/">Analytics Business Intelligence</a>
            <div class="navbar-nav" id="nav--link">
              <a class="nav-link btn btn-outline-success" href="/dash">Dashboard</a>
            </div>
          </div>
      </nav>
  </div>

    <div class="content">
      <div class="container" id="card-results">
  
        <div class="htable">
          <h1 class="gradient__text">Resultados de la Búsqueda</h1>
        </div>
        <% if (results && results.length > 0) { %>
          <div class="table-responsive">
              <table>
                  <thead class="sticky-top">
                      <tr>
                          <% Object.keys(results[0]).forEach(function(columnName) { %>
                              <th><%= columnName %></th>
                          <% }); %>
                      </tr>
                  </thead>
                  <tbody>
                      <% results.forEach(function(record) { %>
                          <tr>
                              <% Object.keys(record).forEach(function(columnName) { %>
                                  <td><%= record[columnName] %></td>
                              <% }); %>
                          </tr>
                      <% }); %>
                  </tbody>
              </table>
          </div>
          <% } else { %>
          <p style="text-align: center; margin-top: 10px">
              No se encontraron resultados. Por favor, intenta con otra búsqueda.
          </p>
          <% } %>
          
        <div class="footer">
          <a href="/" class="btn btn-secondary">Volver a la búsqueda</a>
        </div>
      </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>

